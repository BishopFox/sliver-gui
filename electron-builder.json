{
  "productName": "sliver",
  "directories": {
    "output": "release/"
  },
  "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
  ],
  "win": {
    "icon": "dist/en",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "dist/en",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/en",
    "target": [
      "deb",
      "rpm"
    ]
  }
}
