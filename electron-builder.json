{
  "productName": "Sliver",
  "directories": {
    "output": "release/"
  },
  "artifactName": "${productName}_${version}_${os}-${arch}.${ext}",
  "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
  ],
  "win": {
    "icon": "dist/en",
    "target": [
      "portable",
      "nsis"
    ],
    "publish": [{
      "provider": "github",
      "owner": "BishopFox",
      "repo": "sliver-gui",
      "private": true
    }]
  },
  "mac": {
    "icon": "dist/en",
    "target": [
      {
        "target": "dmg",
        "arch": "arm64"
      },
      {
        "target": "dmg",
        "arch": "x64"
      }
    ],
    "publish": [{
      "provider": "github",
      "owner": "BishopFox",
      "repo": "sliver-gui",
      "private": true
    }]
  },
  "linux": {
    "icon": "dist/en",
    "target": [
      "deb",
      "rpm",
      "AppImage"
    ],
    "publish": [{
      "provider": "github",
      "owner": "BishopFox",
      "repo": "sliver-gui",
      "private": true
    }]
  }
}
